<h2>Available drones</h2>

{{#each drones}}
  <ul>
    <li>
      <p>Drone Name: {{this.name}}</p>
      <p>Number of Propellers: {{this.propellers}}</p>
      <p>The Max Speed: {{this.maxSpeed}}</p>
      <a href="/drones/{{this._id}}/edit"><button type="button">Edit Drone</button></a><br
      /><br />

      {{! prettier ignore }}
      <form action="/drones/{{this._id}}/delete" method="POST">

        <button>Delete Drone</button>

      </form>
    </li>

  </ul>
{{/each}}